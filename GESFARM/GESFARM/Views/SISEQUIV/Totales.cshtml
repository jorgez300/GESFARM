
@{
    ViewBag.Title = "Totales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">


    <div class="row mt-2">
        <div class="col-12">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">Clasificacion</span>
                </div>
                <select id="SelClas" class="form-control">
                    <option value="T" selected> Todos</option>
                    <option value="S">Con Existencia</option>
                    <option value="N">Existencia Cero</option>
                </select>
            </div>
        </div>
        <div class="col-12">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">Principio Activo</span>
                </div>
                <input id="PrinAct" type="text" class="form-control" />
            </div>
        </div>
        <div class="col-3">
            <button id="BtnFiltrar" type="button" class="btn btn-info w-100">Filtrar</button>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-12">

            <style>
                .table td, th {
                    margin: 2px;
                    font-size: 13px;
                    padding: .15rem;
                }
            </style>

            <table class="table">
                <thead>
                    <tr>
                        <th>Id </th>
                        <th>Principio activo</th>
                        <th>Productos</th>
                        <th>Existen</th>
                        <th>Detalle</th>
                    </tr>
                </thead>
                <tbody id="TableTotalesProdxPrincAct">
                </tbody>
            </table>
        </div>
    </div>
</div>



@section Scripts
    {
    @Scripts.Render("~/bundles/EquivTotales?r=" + DateTime.Now.ToString("ddmmyymiss"))
}